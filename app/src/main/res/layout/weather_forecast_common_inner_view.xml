<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_weather_type"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/img_weather_type"
            android:layout_width="@dimen/img_dimension"
            android:layout_height="@dimen/img_dimension"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/padding_between_views"
            />

        <TextView
            android:id="@+id/tv_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_weather_type"
            android:paddingTop="@dimen/padding_between_views"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_summary"
            android:layout_centerHorizontal="true"
            android:paddingTop="@dimen/padding_between_views"
            />

    </RelativeLayout>
